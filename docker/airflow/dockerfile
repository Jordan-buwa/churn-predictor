# docker/airflow/Dockerfile

# Base Airflow image with Python 3.11
FROM apache/airflow:2.9.1-python3.11

# Switch to root to install OS-level dependencies if needed
USER root
RUN apt-get update -y && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Switch back to airflow user
USER airflow

# Copy Python dependencies from the project root
COPY requirements.txt /requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r /requirements.txt

# Copy only necessary Airflow folders to keep build small
COPY airflow/dags/ /opt/airflow/dags/
COPY plugins/ /opt/airflow/plugins/
COPY scripts/ /opt/airflow/scripts/  #optional if have scripts 
COPY config/ /opt/airflow/configs/ 

# Set Airflow home (optional if you want to be explicit)
ENV AIRFLOW_HOME=/opt/airflow

# Default command (already set in base image, can override if needed)
# CMD ["airflow", "scheduler"]
